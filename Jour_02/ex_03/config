db.createCollection( "students",
   { validator: { $and:
      [
         { lastname: { $type: "string" } },
         { firstname: { $type: "string" } },
         { email: { $type: "string" } },
         { phone: { $type: "string"  } },
         { validated: { $in: [ "in progress", "validated", "rejected" ] } },
         { admin: { $type: "bool" } }
      ]
   }
} )